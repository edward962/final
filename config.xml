<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
    id          = "com.phonegap.faded"
    versionCode = "10"
    version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Faded Client</name>

    <description>
      Faded
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
    HieuND
    </author>

     <platform name="android">
              <icon src="app/app/resources/android/icon/drawable-ldpi-icon.png" density="ldpi" />
              <icon src="app/app/resources/android/icon/drawable-mdpi-icon.png" density="mdpi" />
              <icon src="app/app/resources/android/icon/drawable-hdpi-icon.png" density="hdpi" />
              <icon src="app/app/resources/android/icon/drawable-xhdpi-icon.png" density="xhdpi" />
              <icon src="app/app/resources/android/icon/drawable-xxhdpi-icon.png" density="xxhdpi" />
              <icon src="app/app/resources/android/icon/drawable-xxxhdpi-icon.png" density="xxxhdpi" />
     </platform>

        <platform name="ios">
              <!-- iOS 8.0+ -->
              <!-- iPhone 6 Plus  -->
              <icon src="app/app/resources/ios/icon/icon-60@3x.png" width="180" height="180" />
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="app/app/resources/ios/icon/icon-60.png" width="60" height="60" />
              <icon src="app/app/resources/ios/icon/icon-60@2x.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="app/app/resources/ios/icon/icon-76.png" width="76" height="76" />
              <icon src="app/app/resources/ios/icon/icon-76@2x.png" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="app/app/resources/ios/icon/icon-40.png" width="40" height="40" />
              <icon src="app/app/resources/ios/icon/icon-40@2x.png" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="app/app/resources/ios/icon/icon.png" width="57" height="57" />
              <icon src="app/app/resources/ios/icon/icon@2x.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="app/app/resources/ios/icon/icon-72.png" width="72" height="72" />
              <icon src="app/app/resources/ios/icon/icon-72@2x.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="app/app/resources/ios/icon/icon-small.png" width="29" height="29" />
              <icon src="app/app/resources/ios/icon/icon-small@2x.png" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="app/app/resources/ios/icon/icon-50.png" width="50" height="50" />
              <icon src="app/app/resources/ios/icon/icon-50@2x.png" width="100" height="100" />
     </platform>

    <!-- We'll include the Barcode plugin as an example -->
    <plugin name="cordova-plugin-console" spec="1.0.1" source="pgb" />
    <plugin name="cordova-plugin-device" spec="1.0.1" source="pgb" />
    <plugin name="cordova-plugin-splashscreen" spec="2.1.0" source="pgb" />
    <plugin name="com.indigoway.cordova.whitelist.whitelistplugin" spec="1.1.1" source="pgb" />
    <plugin name="com.phonegap.plugin.statusbar" spec="1.1.0" source="pgb" />
</widget>
